<%
# replace %link% with a link to the Apply controller
@text.gsub!("%link%", @link)

# replace %availability_link% with link to Apply#availability
@text.gsub!("%availability_link%", @availability_link)

# replace %attribute% with @application_for_offering.attribute
@text.gsub!(/\%([a-z0-9_.]+)\%/) { |a| eval("@application_for_offering.#{a.gsub!(/\%/,'')}") rescue nil }

%><%= @text %>