<%
# replace %link% with a link to the Apply controller
@text = @text.gsub("%link%", @link)

# replace %mentor.attribute% with @mentor.attribute
@text = @text.gsub(/\%mentor.([a-z0-9_.]+)\%/) { |a| @mentor.reload; eval("@#{a.gsub!(/\%/,'')}") rescue nil }

# replace %mentee.attribute% with @mentee.attribute
@text = @text.gsub(/\%mentee.([a-z0-9_.]+)\%/) { |a| eval("@#{a.gsub!(/\%/,'')}") rescue nil }

# replace %offering.attribute% with @offering.attribute
@text = @text.gsub(/\%offering.([a-z0-9_.]+)\%/) { |a| eval("@#{a.gsub!(/\%/,'')}") rescue nil }


%><%= @text %>