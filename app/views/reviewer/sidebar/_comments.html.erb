<% unless @viewing_past_app %>
	
	<h6><b>Track Your Personal Comments:</b></h6>

	<%= form_for @application_reviewer, :url => { :action => 'update', :id => @app } do |f| %>

		<%= f.text_area :comments, rows: 10, class: 'auto_height' %>
		<br/>
		<%= f.submit "Save Comments", class: 'btn small' %>

	<% end %>

<% end %>