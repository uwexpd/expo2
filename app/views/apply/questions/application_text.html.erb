<div class="input-field col s12">
	<%= fields_for "user_application[texts_attributes][#{question.attribute_to_update}]", qf.object.text(question.attribute_to_update) do |text_fields| %>
		
		<%= text_fields.label(:body, (question.question + " #{content_tag('abbr', '*', title: "required") if question.required?}").html_safe, class: 'truncate')%>

		<%= help_link question %>

		<%= text_fields.text_area :body, class: "materialize-textarea validate #{'charcounter' if question.character_limit? }",  data: {length: question.character_limit} %>					
		<%= content_tag('span', "#{question.word_limit} word limit", :class => 'helper-text') if question.word_limit? %>

		<%= display_computed_caption(question.caption) if question.caption? %>	
		
		<%#= submit_tag( "View and Print PDF Preview", :name => "pdf_button", :id => "pdf_button" ) %>			
	<% end %>
		
</div>