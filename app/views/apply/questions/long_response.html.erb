<div class="input-field col s12">

	<%= qf.text_area question.attribute_to_update, required: question.required? ? true : false, class: "materialize-textarea validate" %>

	<%= qf.label(question.attribute_to_update, (question.question + " #{content_tag('abbr', '*', title: "required") if question.required?}").html_safe)%>	
	
	<%= content_tag('span', "#{question.word_limit} words limit", :class => 'helper-text') if question.word_limit? %>
	
	<%= display_computed_caption(question.caption) if question.caption? %>
</div>