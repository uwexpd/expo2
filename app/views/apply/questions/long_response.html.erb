<div class="input-field col s12"><%= (question.question + " #{content_tag('abbr', '*', title: "required") if question.required?}").html_safe %></div>

<div class="input-field col s12">

	<%= qf.text_area question.attribute_to_update, required: question.required? ? true : false, class: "#{'tinymce' if question.use_mce_editor} materialize-textarea validate #{'charcounter' if question.character_limit? }", data: {length: question.character_limit} %>

	<%= qf.label(question.attribute_to_update, "Please enter your answer here...") %>
	
	<%= content_tag('span', "#{question.word_limit} words limit", :class => 'left helper-text') if question.word_limit? %>
	
	<%= display_computed_caption(question.caption) if question.caption? %>
</div>