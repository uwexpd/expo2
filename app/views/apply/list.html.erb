
<% title "Online Applications" %>

<div class="card">
  <div class="card-content">
	<h5>Current Offerings Open for Applications</h5>
	<% if @current_offerings.empty? %>
		<p>We're sorry, but there are currently no offerings open for applications.</p>
	<% else %>
		<ul>
		<% for offering in @current_offerings %>
			<li><%= link_to offering.title, :action => 'index', :offering => offering.id %></li>
		<% end -%>
		</ul>
	<% end -%>
				

	<% unless @current_user.person.application_for_offerings.closed.empty? %>
		<h5>Your Previous Applications</h5>
		<p>You can view any of your past applications that are in the system by clicking on the links below:</p>
		
		<ul class="link-list">
		<% for app in @current_user.person.application_for_offerings.closed.reverse %>
			<li><%= link_to "#{app.offering.title}: #{app.stripped_project_title}", :action => 'index', :offering => app.offering.id %></li>
		<% end -%>
		</ul>
	<% end -%>
  </div>
</div>