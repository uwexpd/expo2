
<% title "Online Applications" %>

<div class="card">
  <div class="card-content">
	<h5>Current Offerings Open for Applications</h5>
	<% if @current_offerings.empty? %>
		<p>We're sorry, but there are currently no offerings open for applications.</p>
	<% else %>
		<table>
			<% @current_offerings.each do |offering| %>
		  <tr>			  
			  <td><%= link_to offering.title, :action => 'index', :offering => offering.id %></td>			  
		  </tr>
		  <% end %>
	  </table>		
	<% end -%>
				
	<% previous_apps = @current_user.person.application_for_offerings.closed %>
	<% unless previous_apps.empty? %>
		<h5>Your Previous <%= previous_apps.size %> Applications</h5>
		<p>You can view any of your past applications that are in the system by clicking on the links below:</p>
		<table>				
			<% previous_apps.reverse.each do |app| %>
				<tr> <!-- class="link-list" -->
					<td><%= link_to "#{app.offering.title}: #{app.stripped_project_title}", :action => 'index', :offering => app.offering.id %></td>
				</tr>
			<% end -%>
			
		</table>
	<% end -%>

  </div>
</div>