<% readonly ||= false %>
<% result_id = "service_learning_position_new_times" %>
<% slp = service_learning_position %>
<% time_row_display = "#{time_row % 12}" %>
<% time_row_value = "#{time_row.to_s}" %>

<tr>
	<th class="hour"><%= time_row_display %>:00</th>
	<%= time_row_cell(time_row_value + ":00", :sunday, result_id, slp.time?(time_row_value + ":00", :sunday), :class => 'weekend', :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":00", :monday, result_id, slp.time?(time_row_value + ":00", :monday), :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":00", :tuesday, result_id, slp.time?(time_row_value + ":00", :tuesday), :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":00", :wednesday, result_id, slp.time?(time_row_value + ":00", :wednesday), :readonly => readonly) %>	
	<%= time_row_cell(time_row_value + ":00", :thursday, result_id, slp.time?(time_row_value + ":00", :thursday), :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":00", :friday, result_id, slp.time?(time_row_value + ":00", :friday), :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":00", :saturday, result_id, slp.time?(time_row_value + ":00", :saturday), :class => 'weekend', :readonly => readonly) %>
	<th class="hour"><%= time_row_display %>:00</th>
</tr>

<tr class="half_row">
	<th class="hour"><%= time_row_display %>:30</th>
	<%= time_row_cell(time_row_value + ":30", :sunday, result_id, slp.time?(time_row_value + ":30", :sunday), :class => 'weekend', :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":30", :monday, result_id, slp.time?(time_row_value + ":30", :monday), :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":30", :tuesday, result_id, slp.time?(time_row_value + ":30", :tuesday), :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":30", :wednesday, result_id, slp.time?(time_row_value + ":30", :wednesday), :readonly => readonly) %>	
	<%= time_row_cell(time_row_value + ":30", :thursday, result_id, slp.time?(time_row_value + ":30", :thursday), :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":30", :friday, result_id, slp.time?(time_row_value + ":30", :friday), :readonly => readonly) %>
	<%= time_row_cell(time_row_value + ":30", :saturday, result_id, slp.time?(time_row_value + ":30", :saturday), :class => 'weekend', :readonly => readonly) %>
	<th class="hour"><%= time_row_display %>:30</th>
</tr>