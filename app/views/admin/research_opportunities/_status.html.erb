<div class="information">
	<span class="smaller light"><i class="material-icons uw_purple">info_outline</i>Switching active/inactive will queue an email notification to faculty</span>
</div>

<table class="borderless">	
	<tr>
		<th>Active</th>
		<td>
			<div class="toggle-bool-switches-container">
				<%= link_to({:action => :queue, :id => opportunity.id}, :remote => true, method: :post) do %>
					<span id="toggle-research_opportunity-<%= opportunity.id %>-active" class="toggle-bool-switch <%= "on" if opportunity.active? %> notify-success" data-model="research_opportunity" data-object_id="<%= opportunity.id %>" data-field="active" <%= "data-value=true" if opportunity.active? %> data-url="/expo/admin/research_opportunities/<%= opportunity.id %>" data-success_message="Research opportunity updated active field successfully!">
				</span>
				<% end %>	
			</div>
		</td>
	</tr>	
