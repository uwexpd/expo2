<tr id="note_<%= note.id %>">

	<td width=150>
		<div class="timestamp">
			<span class="username"><%= note.fullname rescue nil %></span>
			<br>
			<span class="caption"><%= note.created_at.strftime("%I:%M") %> <%= note.created_at.ampm %></span>
			<br>
			<!-- <span class="note_edit_buttons">
				
				<%#= link_to "edit", edit_note_path(note, :return_to => params[:return_to] || request.original_url), :class => 'light' %>
				| <%#= link_to_remote "delete", 
							:url => note_path(note, :return_to => params[:return_to] || request.original_url),
							:indicator => true, 
							:method => :delete, 
							:confirm => "Are you sure you want to delete this note?", :class => 'light' %>
			</span> -->
		</div>
	</td>

	<td width=100 class="contact-type" id="<%= note.contact_type.title rescue nil %>">
		<span class="tooltip" alt="<%= note.contact_type.title rescue nil %>">
		<%= note.contact_type.title rescue nil %></span>
	</td>	
	
	<td class="note-body">
		<%= auto_link textilize_without_paragraph(note.note) %>
		
		<% if note.restricted? %>
			<p class="privacy_note <%= note.access_level %>">
				<%= note.restriction_in_words %>
			</p>
		<% end -%>
	</td>
	
</tr>